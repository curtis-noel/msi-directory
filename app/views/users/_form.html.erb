<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this card from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!--Button Group-->
  <%= render partial: 'partials/admin_btn_group', locals: {:back_url => 'users', :new_url => 'users', :new => false} %>
  <br/>

  <div class="panel panel-default">
      <div class="panel-body">
        <div class="rows">
          <!--Create the Fields Dynamically-->
          <% @user_fields.each do |row| %>
            <div class="row">
              <% row.each do |fields| %>
                <%= render partial: 'text_input', :locals => {:f => f, :object => fields[0], :form_helper => fields[1] } %>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
  <div class="btn-group">
    <%= f.submit :class => "btn" %>
  </div>
<% end %>
